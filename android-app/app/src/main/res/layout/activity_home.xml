<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/container"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="net.mabboud.hair_o_matic.HomeActivity"
              tools:ignore="MergeRootFrame" android:weightSum="1" android:padding="5dp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/insert_time_label"
            android:id="@+id/timeLabel"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/no_connection"
            android:id="@+id/timeTextField"/>


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/kill_count"
            android:id="@+id/sessionCountLabel" android:paddingTop="15dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/no_connection"
            android:id="@+id/sessionCountTextField"/>


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lifetime_count"
            android:id="@+id/lifeTimeCountLabel" android:paddingTop="15dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/no_connection"
            android:id="@+id/lifeTimeCountTextField"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/resistance"
                android:id="@+id/resistanceLabel" android:paddingTop="15dp" android:layout_weight=".5"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/voltage_input"
                android:id="@+id/voltLabel" android:paddingTop="15dp" android:layout_weight=".5"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/no_connection"
                android:id="@+id/resistanceTextField" android:layout_weight=".5"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/no_connection"
                android:id="@+id/voltTextField" android:layout_weight=".5"/>
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/current"
            android:id="@+id/currentLabel" android:paddingTop="15dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/no_connection"
            android:id="@+id/currentTextField"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp" android:layout_gravity="center_horizontal" android:weightSum="1"
    >
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/minus_current_label"
                android:id="@+id/minusCurrentButton" android:layout_weight=".5"
                android:textColor="@color/colorAccent" android:textSize="18sp" android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/plus_current_label"
                android:id="@+id/plusCurrentButton" android:layout_weight="0.5"
                android:textSize="18sp"  android:singleLine="false"
                android:textAllCaps="false"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"/>
    </LinearLayout>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="reconnect"
            android:id="@+id/reconnectBtn"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/messages_label"
            android:id="@+id/messageLabel" android:paddingTop="15dp"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/messageScrollView">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/messageTextView"/>
    </ScrollView>

</LinearLayout>
